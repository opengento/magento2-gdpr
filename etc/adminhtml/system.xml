<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="gdpr" translate="label" sortOrder="135" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Customer Privacy (GDPR)</label>
            <tab>customer</tab>
            <resource>Opengento_Gdpr::settings</resource>
            <!-- Global Settings -->
            <include path="Opengento_Gdpr::system/general.xml" />
            <!-- Erasure Settings -->
            <include path="Opengento_Gdpr::system/erasure.xml" />
            <!-- Export Settings -->
            <include path="Opengento_Gdpr::system/export.xml" />
            <!-- Cookie Settings -->
            <include path="Opengento_Gdpr::system/cookie.xml" />
        </section>
    </system>
</config>
